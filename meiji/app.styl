@import 'nib'

.text-center
  text-align center
.pl-10
  padding-left 1rem
.pr-10
  padding-right 1rem
.imgblock
  width 100%
  display block

*
  box-sizing border-box

header
  position fixed
  top: 0
  left: 0
  width 100%
  height 5rem
  display: flex
  justify-content: space-between
  align-items: center
  background #1A1A1A
  img
    width 12rem
    display: inline-block
  button
    outline: none
    background none
    border none
    span
      display block
      width: 22px;
      height: 2px;
      position relative
      border-radius: 1px;
      background-color: #fff
      transition all .5s
      & + span
        margin-top 4px
    .icon-bar:nth-child(2):before
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      position: absolute;
      content: "";
      background-color: inherit;
      transition all .5s
    &.toggle
      .icon-bar:nth-child(1), .icon-bar:nth-child(3)
        opacity 0
      .icon-bar:nth-child(2)
        transform: rotate(45deg);
        &:before
          transform: rotate(90deg);
  nav
    border-top: 1px solid transparent
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1) !important;
    position absolute
    top: 5rem
    left: 0
    width 100%
    background #1A1A1A
    display: none
    ul
      padding .5rem 1.25rem 0
    li
      height 5rem
      display: flex
      align-items: center
      color: #fff
      font-size 1.2rem

main
  padding-top 5rem

.section6
  .form
    padding: 0 5%
    .btn
      display: flex
      width 100%
      height 3rem
      justify-content: center
      align-items: center
      font-size 1.2rem
      color: #2B0900
      border-radius: .3rem
      background: linear-gradient(left, #FFED68, #FCDF0A)
      margin-bottom 5rem
    label
      display block
      border-bottom 1px solid #CCCCCC
      height 3rem
      display: flex
      flex-direction: row
      font-size 1.3rem
      color: #333333
      margin-bottom 1rem
      span
        font-size 1.3rem
        margin 0
        padding: 0
        flex: 0 0 8em
        display: inline-flex
        align-items: center
    input
      outline: none
      border: none
      flex: 1
      font-size 1.3rem
      color: #333333
    span
      font-size 1.3rem
      color: #333333
      display: block
      padding-top .65rem
      margin-bottom 1rem
    textarea
      outline: none
      border: none
      resize none
      width 100%
      height 8rem
      border-bottom: 1px solid #CCCCCC
      margin-bottom 2rem
      font-size 1.3rem
      color: #333333
      border-radius: 0
footer
  height 4.5rem
  background #212121
  display: flex
  justify-content: center
  align-items: center
  color: #8F8F8F
  font-size 1rem

.updatebtn
  position relative
  &:after
    content: ''
    position absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
